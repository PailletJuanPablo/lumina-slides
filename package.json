{
  "name": "lumina-slides",
  "version": "8.2.5",
  "homepage": "https://pailletjuanpablo.github.io/lumina-slides/",
  "description": "The interface layer for the agentic era. Turn text to UI with declarative JSON.",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "main": "./dist/lumina-slides.umd.cjs",
  "module": "./dist/lumina-slides.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/lumina-slides.js",
      "require": "./dist/lumina-slides.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./style.css": "./dist/style.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PailletJuanPablo/lumina-slides.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:docs": "vite build -c vite.docs.config.ts",
    "predeploy": "npm run docs:generate && npm run build:docs",
    "deploy": "gh-pages -d docs-dist",
    "prepublishOnly": "npm run build",
    "docs:generate": "typedoc --json public/api-docs.json src/index.ts --skipErrorChecking",
    "type-check": "vue-tsc --noEmit",
    "preview": "vite preview",
    "screenshots": "node scripts/screenshot-decks.js"
  },
  "devDependencies": {
    "gsap": "^3.12.2",
    "zod": "^4.2.1",
    "zod-to-json-schema": "^3.25.0",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "autoprefixer": "^10.4.16",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.31",
    "puppeteer": "^24.34.0",
    "tailwindcss": "^3.3.5",
    "typedoc": "^0.28.15",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vue": "^3.3.8",
    "vue-tsc": "^1.8.22"
  },
  "keywords": [
    "vue",
    "presentation",
    "slides",
    "engine",
    "gsap"
  ],
  "author": {
    "name": "Juan Pablo Paillet",
    "url": "https://pailletjp.com"
  },
  "license": "MIT"
}